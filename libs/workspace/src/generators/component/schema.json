{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Component",
  "title": "",
  "type": "object",
  "properties": {
    "project": {
      "description": "Name of the project to generate the component in.",
      "type": "string",
      "$default": {
        "$source": "projectName"
      },
      "alias": "p"
    },
    "name": {
      "type": "string",
      "description": "Component name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    }
  },
  "required": ["name"]
}
